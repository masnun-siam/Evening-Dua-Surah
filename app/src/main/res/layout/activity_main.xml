<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/activity_background_grey_gradient"
    android:weightSum="3">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="সন্ধ্যার দোয়া"
        android:textColor="#3F51B5"
        android:background="#FAAA34"
        android:padding="40dp"
        android:layout_gravity="top"
        android:layout_margin="30dp"
        android:gravity="center"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:shadowColor="#000000"
        />

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        >-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center_horizontal|center"
            android:padding="30dp"
            android:layout_weight="2"
            android:weightSum="15"

            >

            <Button
                android:id="@+id/list_show_button"
                android:layout_width="303dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:autoSizeMaxTextSize="40sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/firstpage_button_shape"
                android:padding="20dp"
                android:shadowColor="#A8A8A8"
                android:text="দোয়া ও সুরার তালিকা"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:layout_weight="6"/>

            <Button
                android:id="@+id/tasbih_button"
                android:layout_width="181dp"
                android:layout_height="0dp"

                android:layout_weight="4"

                android:autoSizeMaxTextSize="40sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/firstpage_button_shape"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="20dp"
                android:shadowColor="#A8A8A8"
                android:text="তাসবিহ"
                android:textColor="#000000"
                android:textIsSelectable="true"

                />
        </LinearLayout>
<!--    </ScrollView>-->


</LinearLayout>